{
  "name": "result",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/result/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/result",
        "main": "packages/result/src/index.ts",
        "tsConfig": "packages/result/tsconfig.lib.json",
        "assets": ["packages/result/*.md"],
        "format": ["esm", "cjs"]
      }
    },
    "publish:locale": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf node_modules/@kilbergr/result && cp -r dist/packages/result node_modules/@kilbergr/result"
      },
      "dependsOn": ["build"]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/result",
        "command": "prettier --write src/**/*.ts"
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/result",
        "command": "prettier --check src/**/*.ts"
      }
    }
  }
}
